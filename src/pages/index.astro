---
import PageLayout from '@/layouts/Base.astro';
---

<PageLayout meta={{ title: 'Home' }}>
  <!-- Hero section -->
  <!-- Background blur -->
  <div
    class="pointer-events-none absolute left-1/2 top-0 -ml-[50vw] min-h-screen w-screen overflow-x-hidden opacity-50 blur-3xl md:top-[-15%]"
  >
    <div
      class="absolute right-[-40%] top-[10%] h-full w-[65%] rounded-full bg-gradient-to-b from-purple-300 via-blue-300 to-transparent opacity-30 dark:opacity-10"
    >
    </div>
    <div
      class="absolute left-[-40%] top-[10%] h-full w-[65%] rounded-full bg-gradient-to-b from-blue-300 via-pink-300 to-transparent opacity-30 dark:opacity-10"
    >
    </div>
    <div
      class="absolute left-[-50%] top-[-20%] h-full w-[85%] rounded-full bg-gradient-to-b from-indigo-300 via-orange-300 to-transparent opacity-60 dark:opacity-10"
    >
    </div>
    <div
      class="absolute right-[-50%] top-[-20%] h-full w-[85%] rounded-full bg-gradient-to-b from-orange-300 via-indigo-300 to-transparent opacity-60 dark:opacity-10"
    >
    </div>
  </div>
  <section
    class="relative mx-auto -mt-24 flex h-screen max-w-xl items-center justify-center"
  >
    <div class="w-full text-center">
      <span
        class="title bg-gradient-to-r from-accent-two/85 via-accent-one/85 to-accent-two/85 bg-clip-text text-3xl text-transparent dark:from-accent-two dark:via-accent-one dark:to-accent-two"
      >
        Thank you for installing Sidesy!
      </span>
      <p class="mt-2 text-lg font-medium">
        Your YouTube experience just got a major upgrade. Let's get started.
      </p>
    </div>
  </section>

