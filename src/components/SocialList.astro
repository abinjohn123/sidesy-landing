---
import { Icon } from 'astro-icon/components';

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
  friendlyName: string;
  isWebmention?: boolean;
  link: string;
  name: string;
}[] = [
  {
    friendlyName: 'Chrome Web Store',
    link: 'https://chromewebstore.google.com/detail/sidesy-your-comments-side/mlceikceecooilkgiikkopipedhjjech',
    name: 'mdi:google-chrome',
  },
  {
    friendlyName: 'Firefox Add-ons',
    link: 'https://addons.mozilla.org/en-US/firefox/addon/sidesy/',
    name: 'mdi:firefox',
  },
  {
    friendlyName: 'Github',
    link: 'https://github.com/abinjohn123/sidesy',
    name: 'mdi:github',
  },
];
---

<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
  {
    socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
      <li class="flex text-slate-600">
        <a
          class="inline-block"
          href={link}
          rel={`noreferrer ${isWebmention ? 'me authn' : ''}`}
          target="_blank"
        >
          <Icon
            aria-hidden="true"
            class="size-6"
            focusable="false"
            name={name}
          />
          <span class="sr-only">{friendlyName}</span>
        </a>
      </li>
    ))
  }
</ul>
